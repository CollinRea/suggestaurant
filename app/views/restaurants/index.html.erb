<h3>Restaurants</h3>

<%= link_to "Add New", new_restaurant_path %>

<div class="container">
  <table>
  <% if @restaurants %>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Rating</th>
      <th>Last Visited</th>
    </tr>
    <% @restaurants.each do |restaurant|%>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.category %></td>
        <td><%= restaurant.average %></td>
        <td><%= restaurant.last_visited %></td>
      </tr>
    <% end %>
  <% end %>
  </table>
</div>