<h3>Login</h3>

<ul>
<% if @errors %>
  <li><%= @errors %></li>
<% end %>
</ul>

<div id="form-container">
  <%= form_tag '/login' do %>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login!" %>
  <% end %>
</div>